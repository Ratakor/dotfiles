#!/bin/sh
MUSICDIR="$HOME/Music/"
[ -n "$1" ] && MUSIC="$1" || MUSIC="$MUSICDIR$(ls $MUSICDIR | dmenu -c -p 'Play ')" &&
[ $(printf 'no\nyes' | dmenu -c -p 'Shuffle?') = "yes" ]  && SHUFFLE='--shuffle'
[ "$MUSIC" != "$MUSICDIR" ] && mpv --no-video --loop-playlist "$SHUFFLE" "$MUSIC" & [ "$MUSIC" != "$MUSICDIR" ] && vis
