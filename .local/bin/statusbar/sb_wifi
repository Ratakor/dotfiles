#!/bin/sh
NO_WIFI_ICON='󰤯'
WIFI_LOW_ICON='󰤟'
WIFI_MID_ICON='󰤢'
WIFI_FULL_ICON='󰤨'
PERCENTAGE=$(cat /proc/net/wireless | awk '/wlan0/ {print "", int($3 * 100 / 70)}' | xargs)

case $PERCENTAGE in
        0)                            printf "$NO_WIFI_ICON DOWN\n"   ;;
        100|9[0-9]|8[0-9]|7[0-9])     printf "$WIFI_FULL_ICON HIGH\n" ;;
        6[0-9]|5[0-9]|4[0-9]|3[0-9])  printf "$WIFI_MID_ICON MID\n"  ;;
        2[0-9]|1[0-9]|[0-9])          printf "$WIFI_LOW_ICON LOW\n"  ;;
esac
