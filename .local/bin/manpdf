#!/bin/sh
# Provide a menu to find a manpage and transform manpages to pdf, binded to Super+Shift+H in my dwm config
MAN='/usr/bin/man'
[ -n "$1" ] && $MAN -Tpdf "$1" | swallow zathura - || \
	INPUT=$($MAN -k . | dmenu -i -l 20 | awk '{print $1}') && \
	[ -n "$INPUT" ] && $MAN -Tpdf "$INPUT" | zathura -
