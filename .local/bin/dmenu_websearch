#!/bin/sh
URL="https://librex.ratakor.com/search.php?q="
QUERY=$(printf ""| dmenu -p "Search:" -l 0)
[ -n "$QUERY" ] && xdg-open "${URL}${QUERY}&t=0" 2> /dev/null

#[ -n $(printf "$QUERY" | awk /https/) ] && xdg-open "${QUERY}" 2> /dev/null || \
