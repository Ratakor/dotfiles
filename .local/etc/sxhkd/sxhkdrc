# reload sxhkd
super + Escape
	kill -10 $(pidof sxhkd)
# spawn a terminal
{super + Return,button8)
	$TERMINAL
# spawn dmenu_run
{super + d,button10}
	dmenu_run -hp "browser,mail"
# lock screen
XF86ScreenSaver
	slock & xset dpms force off
# notify about battery level
XF86Battery
	battery
# swap between dracula and gruvbox
Scroll_Lock
	themeswap
# take a screenshot
Print
	screenshot
# raise volume
{super + equal, XF86AudioRaiseVolume}
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%+; kill -44 $(pidof dwmblocks)
# decrease volume
{super + minus, XF86AudioLowerVolume}
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%-; kill -44 $(pidof dwmblocks)
# mute audio
XF86Launch1
	wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle; kill -44 $(pidof dwmblocks)
# mute micro
F6
	wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle; kill -45 $(pidof dwmblocks)
# launch dmenurecord with F7 or newsboat with super + b, both in the terminal
{F7,super + b}
	$TERMINAL -e {dmenurecord,newsboat}
# launch glow for notes in the terminal or launch st in the notes directory
super + {n, shift + n}
	{$TERMINAL -e glow "$XDG_DATA_HOME/notes",st -d "$XDG_DATA_HOME/notes"}
# launch music with super + m or musiccmd with super + shift + m
super + {m, shift + m}
	{music,musiccmd}
# musiccmd shortcuts
XF86Audio{Prev,Next,Play,Stop}
	musiccmd {prev,next,cycle,stop}
# different options for dmenusearch
super + {s,a,y,w,e}
	dmenusearch {web,aur,youtube,man,emoji}
# launch a small menu for shutdown or lock screen
super + shift + w
	dmenuoff
# plumber with dmenu
super + u
	dmenuhandler "$(xclip -o)"
# ðŸª 
{super + shift + u, button2}
	plumber --sel
# kill selected window
button9
	xdo kill
