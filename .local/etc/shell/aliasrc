#!/bin/sh

# ROOTCMD not required for some system commands
for command in iftop mount umount fdisk cryptsetup modprobe pacman shutdown poweroff reboot ; do
	alias $command="$ROOTCMD $command"
done; unset command

# edit config files and stuff
alias cf="cd $XDG_CONFIG_HOME"
alias cfv="cd $XDG_CONFIG_HOME/nvim"
alias cfz="v $XDG_CONFIG_HOME/shell/.zshrc"
alias cfa="v $XDG_CONFIG_HOME/shell/aliasrc"
#alias cfp="v $XDG_CONFIG_HOME/shell/zprofile"
alias cfx="v $XDG_CONFIG_HOME/sx/sxrc"
alias cfn="v $XDG_CONFIG_HOME/newsboat/config"
alias cfu="v $XDG_CONFIG_HOME/newsboat/urls"
alias dt="cd $XDG_DATA_HOME"
alias pkg="v $XDG_DATA_HOME/packages/packages"
alias aur="v $XDG_DATA_HOME/packages/packages.aur"
alias d="cd $XDG_DOWNLOAD_DIR"
alias m="cd $XDG_MUSIC_DIR"
alias pp="cd $XDG_PICTURES_DIR"
alias vv="cd $XDG_VIDEOS_DIR"
alias ww="cd $XDG_DATA_HOME/wallpapers"
alias sc="cd $HOME/.local/bin"
alias scb="cd $HOME/.local/bin/statusbar"
alias n="lf $HOME/notes"

# shorter name and basic stuff changed
[ -x "$(command -v nvim)" ] && alias vimdiff="nvim -d"
alias v="$EDITOR"
alias vim="$EDITOR"
alias suvi="$ROOTCMD $EDITOR"
alias suvim="suvi"
alias make="make PREFIX=$HOME/.local" # this means that you don't need root perm to install stuff with make
alias p="pacman"
alias lf="lfub"
alias :q="exit"
alias :Q="exit"
alias calc="bc -ql"
alias sxiv="sxiv -a"
alias yt="mpv --ytdl-format=22 "
alias z="zathura"
alias pdf="swallow zathura"
alias timer="termdown"
alias video-dlp="yt-dlp -f 'bv' -o '%(title)s [%(id)s].%(ext)s'"
alias music-dlp="yt-dlp -f 'ba' -x --embed-thumbnail --audio-format mp3 -o '%(playlist_index)s - %(title)s [%(id)s].%(ext)s'"
alias paint="pinta"
alias python="python3"
alias py="python"
alias 2048="swallow gnome-2048"
alias nb="newsboat"
alias cat="bat"
alias du="dust -r"
alias duf="duf -hide special"

# verbosity and colors
alias rm="rm -vI"
alias rmdir="rmdir -v"
alias cp="cp -riv"
alias mv="mv -iv"
alias mkdir="mkdir -pv"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ip="ip --color=auto"
alias ls="exa --icons --group-directories-first"
alias sl="ls"
alias ll="ls -lh"
alias la="ls -a"
alias l="ls -lah"
alias tree="ls --tree"

# git
alias g="git"
alias gs="git status"
alias gp="git pull"
alias gb="git branch"
alias ga="git add"
alias gac="git add . && git commit -a"
alias gacp="git add . && git commit -a && git push"

# music
alias pause="echo cycle pause | socat - /tmp/mpvsocket ; kill -43 $(pidof dwmblocks)"
alias next="echo playlist-next | socat - /tmp/mpvsocket ; sleep 1s && kill -43 $(pidof dwmblocks)"
alias prev="echo playlist-prev | socat - /tmp/mpvsocket ; sleep 1s && kill -43 $(pidof dwmblocks)"
alias stop="echo stop | socat - /tmp/mpvsocket ; kill -43 $(pidof dwmblocks)"
alias musicblocks="kill -43 $(pidof dwmblocks)"
