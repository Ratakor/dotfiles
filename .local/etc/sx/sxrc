#!/bin/sh

if [ "$(xrandr | awk '/DP-2/ {print $2}')" = 'connected' ]; then
	xrandr --output LVDS-1 --off
else
	picom -b
fi

xwallpaper --zoom "$XDG_DATA_HOME/wallpapers/OMORI/$(date '+%B').png"
xrandr --dpi 96
setxkbmap fr us

killall xbanish gammastep dwmblocks 1>/dev/null 2>&1

pipewire-launcher &
xbanish &
gammastep &
dwmblocks &

exec dwm
