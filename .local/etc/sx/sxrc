#!/bin/sh

killall picom crond sxhkd pipewire wireplumber xbanish gammastep sb

setxkbmap fr us
xrandr --output DP-2 --mode 2560x1440 --rate 60
xrandr --dpi 140 --output HDMI-0 --pos 2560x360\
	--output DP-2 --mode 2560x1440 --rate 144 --primary
randwp
crond -f "$XDG_CONFIG_HOME/crontab"
xrdb "$XDG_CONFIG_HOME/sx/gruvbox-dark"

sxhkd &
pipewire &
xbanish &
gammastep &
picom -b
sb -b
sh -c "sleep 3; kill -10 $(pidof sb)" &
librespot-cfg &

exec dwm
