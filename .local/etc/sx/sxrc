#!/bin/sh

killall picom pipewire wireplumber xbanish redshift dwmblocks 1>/dev/null 2>&1

if [ "$(xrandr | awk '/DP-2/ {print $2}')" = 'connected' ]; then
	xrandr --output LVDS-1 --off
else
	picom -b
fi

setxkbmap fr us
xrandr --dpi 96
#hsetroot -cover "$XDG_DATA_HOME/wallpapers/omori/$(date '+%B').png"

while true; do
	randwp
	sleep 30m
done &
pipewire &
xbanish &
redshift &
sleep 1s; dwmblocks &

exec dwm
