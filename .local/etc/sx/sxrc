#!/bin/sh

killall picom scron sxhkd pipewire wireplumber xbanish gammastep dwmblocks

setxkbmap fr us
xrandr --setprovideroutputsource modesetting NVIDIA-0\
	--dpi 120\
	--output HDMI-0 --pos 2560x360\
	--output DP-2 --mode 2560x1440 --rate 144 --primary
randwp
scron -f "$XDG_CONFIG_HOME/crontab"
[ -f "$XDG_STATE_HOME/theme" ] &&
	xrdb "$XDG_CONFIG_HOME/sx/$(cat "$XDG_STATE_HOME/theme")"

sxhkd &
pipewire &
xbanish &
picom &
gammastep &
sleep 1s; dwmblocks &
#st -e "monerod --data-dir /storage/monero" &

exec dwm
