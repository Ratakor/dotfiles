#!/bin/sh
# menu for lock and shutdown

RED="#cc241d"
CYAN="#689d6a"

[ "$DMENU" = "tofi" ] && DMENU="tofi --selection-color $RED"
[ "$DMENU" = "dmenu" ] && DMENU="dmenu -sb $RED -hf $CYAN"

query=$(printf ' lock\n exit wm\n⏻ poweroff\n⏼ reboot' | $DMENU -i -p 'System')
case $query in
*"lock")
	glitchlock ;;
*"exit wm")
	riverctl exit ;;
*"poweroff")
	poweroff ;;
*"reboot")
	reboot ;;
esac
